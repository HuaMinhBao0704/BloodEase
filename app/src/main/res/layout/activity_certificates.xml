<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificatesActivity">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="@+id/certificateTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/certificateTitle" />

    <TextView
        android:id="@+id/certificateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Chứng nhận hiến máu"
        android:textColor="#FD6E77"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/thongtincanhan"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_cnhmct"
        android:elevation="6dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certificateTitle"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/ttcn_cnhm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="THÔNG TIN CÁ NHÂN"
            android:textColor="@color/titlePink"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line_cnhmct"
            android:layout_width="371dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/ttcn_cnhm"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_cnhmct" />


        <TextView
            android:id="@+id/hovaten_cnhm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_cnhmct"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="Họ và tên"
            android:textAppearance="@style/titlettcn_cnhm" />


        <TextView
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hovaten_cnhm"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:text="My Duyen"
            android:textAppearance="@style/ttcn_chmn" />

        <View
            android:id="@+id/line1_cnhmct"
            android:layout_width="337dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/ten"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/line_cnhmct" />

        <TextView
            android:id="@+id/ngaysinht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1_cnhmct"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="Ngày sinh"
            android:textAppearance="@style/titlettcn_cnhm" />

        <TextView
            android:id="@+id/ngaysinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ngaysinht"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:text="01/02/2002"
            android:textAppearance="@style/ttcn_chmn" />

        <View
            android:id="@+id/line2_cnhmct"
            android:layout_width="337dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/ngaysinh"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/line_cnhmct" />

        <TextView
            android:id="@+id/titlecccd_cnhm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2_cnhmct"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="Email"
            android:textAppearance="@style/titlettcn_cnhm" />

        <TextView
            android:id="@+id/gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlecccd_cnhm"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:text="myduyen10@gmail.com"
            android:textAppearance="@style/ttcn_chmn" />

        <View
            android:id="@+id/line3_cnhmct"
            android:layout_width="337dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/gmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/line_cnhmct" />

        <TextView
            android:id="@+id/titlediachi_cnhm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3_cnhmct"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="Số điện thoại"
            android:textAppearance="@style/titlettcn_cnhm" />

        <TextView
            android:id="@+id/sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlediachi_cnhm"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="2dp"
            android:gravity="top"
            android:text="0731010101"
            android:textAppearance="@style/ttcn_chmn" />

        <View
            android:id="@+id/line4_cnhmct"
            android:layout_width="337dp"
            android:layout_height="1.5dp"
            android:layout_below="@+id/sdt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/line_cnhmct" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/thongtincanhan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--  Item  -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/frame1_cnhm"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/thongtincanhan">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="118dp"
                    android:layout_marginEnd="100dp"
                    android:src="@drawable/chm" />

                <TextView
                    android:id="@+id/testBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="178dp"
                    android:layout_marginTop="116dp"
                    android:gravity="center"
                    android:text="Xem chi tiết"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/rectangle1_cnhm">

                    <View
                        android:layout_width="23.26dp"
                        android:layout_height="31.59dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="19dp"
                        android:background="@drawable/logocnhm" />

                    <!-- Usage -->

                    <!-- Usage -->
                    <TextView
                        android:id="@+id/amount_of_blood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="60dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="250ml"
                        android:textColor="@color/titlePink"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tinhtrang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="88dp"
                        android:layout_marginTop="6dp"
                        android:gravity="top"
                        android:text="Chờ xác thực"
                        android:textColor="#FFA927" />

                    <TextView
                        android:id="@+id/ten_bvgn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="88dp"
                        android:layout_marginTop="28dp"
                        android:gravity="top"
                        android:text="Bệnh viện truyền máu - Huyết học TP HCM"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/soseri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="88dp"
                        android:layout_marginTop="57dp"
                        android:gravity="top"
                        android:text="Số seri: 1275749362" />

                    <TextView
                        android:id="@+id/ngay_dang_ky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="88dp"
                        android:layout_marginTop="79dp"
                        android:gravity="top"
                        android:text="Thời gian: 01/11/2023"
                        android:textColor="#959595" />
                </RelativeLayout>
            </RelativeLayout>
            <!--  Item  -->



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>